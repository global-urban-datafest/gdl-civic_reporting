<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffd4fcf5"
    android:id="@+id/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/grid"
        android:layout_marginLeft="0dp"
        android:orientation="vertical">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_incident"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/create_report"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Editar Reporte"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ff000000" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_myreports"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/my_reports"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mis Reportes"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ff000000" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Mapa"
            android:id="@+id/btn_map"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_column="1"
            android:layout_row="3" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_reports"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/list_report"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nuevo Reporte"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ff000000" />
    </GridLayout>

</RelativeLayout>
